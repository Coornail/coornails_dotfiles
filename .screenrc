autodetach on
vbell off
startup_message off
defscrollback 5000
caption always "%{= kw}%-w%{= Gk}%n %t%{-}%+w %-="

shelltitle "% |shell"
termcapinfo xterm ti@:te@
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
defhstatus "screen: ^E (^Et)"
sorendition 00 mW
activity "%C -> %n%f %t activity!"

